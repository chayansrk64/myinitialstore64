{%  schema  %} 
{
    "name": "Header",
    "settings": [
        {
            "type": "checkbox",
            "id": "search_bar",
            "label": "show search bar",
            "default": true
        },
        {
            "type": "color",
            "id": "bg",
            "label": "Background color"
        }
    ]
}
{% endschema %}
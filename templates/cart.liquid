{% form 'cart', cart %}

<h2>Cart page</h2>

{% if cart.empty? %}
<h2 style="text-align: center; margin: 50px;">Hey, your cart is empty!</h2>
{% else %}
<div style="margin: 50px 0;">
{%  for item in cart.items %} 
    <div style="display:flex;">
        <div>
            <img src="{{ item.image | image_url: width: 200 }}" alt="">
        </div>
        <div>
            <h2>{{ item.title }}</h2>
            <p>{{ item.final_line_price | money }}</p>
            <p>{{ item.item_count }}</p>
            <input name="updates[]" value="{{ item.quantity }}" >
            <a href="{{ item.url_to_remove }}">Remove</a>
            <button type="submit" name="update" style="padding: 10px 100px;">Update</button>
            <p>{{ item.items_subtotal_price | money }}</p>
             
        </div>
        
    </div>
{% endfor %}
</div>

<hr>

<p style="text-align: end; margin:10px 0;"> Total Price: {{ cart.total_price | money }}</p>

 <button type="submit" name="checkout" style="padding: 10px 100px;">Checkout</button>
{% endif %}
{% endform %}
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

body {
    /* background: green; */
    /* color: white; */
    max-width: 1440px;
    margin: 0 auto;
    background-color: {{ settings.bg }};
    color: {{ settings.text_color }}
}

.header_nav{
    display:flex;
    justify-content: space-between;
    box-shadow: 2px 2px 4px rgba(0,0,0,0.2);
    align-items: center;
    padding: 10px 0;
}
.header_ul {
    display: flex;
}
.header_ul li {
    list-style: none;
    margin-right: 10px;
}

/* collections styles */
.collection_products {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 20px;
  }

  .collection_product {
    border: 1px solid #ccc;
    padding: 10px;
    text-align: center;
  }

  .collection_product img {
    max-width: 100%;
    height: auto;
  }

  /* product page */
.product_page {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 10px;
    margin: 50px 0px;
}
.product_image {
    grid-column: 1 / 3;
}